@model ConverterViewModel;
@{
    ViewData["Title"] = "Lenght Converter";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Enter the lenght to Convert</label>
        <div class="col-sm-6">
            <input asp-for="toConvert" type="number" name="toConvert" class="form-control" placeholder="123">
        </div>
    </div>

<div class="form-group row">
    <div class="col">
        <label asp-for="fromUnit" class="col-sm-4 col-form-label">Unit to Convert from</label>
        <select asp-for="fromUnit" class="form-control">
            <option value="millimeter">Millimeter</option>
            <option value="centimeter">Centimeter</option>
            <option value="meter">Meter</option>
            <option value="kilometer">Kilometer</option>
            <option value="inch">Inch</option>
            <option value="foot">Foot</option>
            <option value="yard">Yard</option>
            <option value="mile">Mile</option>
        </select>
    </div>

    <div class="col">
        <label asp-for="toUnit" class="col-sm-4 col-form-label">Unit to Convert to</label>
        <select asp-for="toUnit" class="form-control">
            <option value="millimeter">Millimeter</option>
            <option value="centimeter">Centimeter</option>
            <option value="meter">Meter</option>
            <option value="kilometer">Kilometer</option>
            <option value="inch">Inch</option>
            <option value="foot">Foot</option>
            <option value="yard">Yard</option>
            <option value="mile">Mile</option>
        </select>
    </div>
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary align-center">Convert</button>
</div>
    
</form>
